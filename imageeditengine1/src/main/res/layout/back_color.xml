<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:background="@drawable/gradient">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageview"/>

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pictureView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/delete_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_color"
            android:padding="15dp"
            android:src="@drawable/ic_cam_delete"
            android:visibility="gone"
            tools:ignore="MissingPrefix" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="7dp"
            android:background="@android:color/transparent"
            android:hint="Type a status"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="#44FFFFFF"
            android:textDirection='anyRtl'
            android:textSize="30dp"
            android:imeOptions="actionDone"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgshoot"
            android:layout_width="55dp"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/watermark_img" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageButtonChangeColor"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="152dp"
            android:layout_centerInParent="true"
            android:src="@drawable/paint"
            android:clickable="true"
            android:background="@drawable/share_back"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/imagebuttonsticker"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="106dp"
            android:background="@drawable/share_back"
            android:src="@drawable/ic_cam_sticker"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/imageButtonFontChange"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/share_back"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_cam_text"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/imageButtonpaint"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/share_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_cam_draw"
            android:layout_marginRight="16dp"/>


        <ImageView
            android:id="@+id/imageButtonChangeAlignment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/font_center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="142dp"
            android:background="@drawable/share_back"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imageButtonTextSize"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/reminder_back_i"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imageButtonFontChanges"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/text_face"
            android:layout_alignParentRight="true"
            android:layout_marginRight="95dp"
            android:background="@drawable/share_back"
            android:visibility="gone"/>

        <!--<ImageView-->
            <!--android:id="@+id/imageButtonFontChanges"-->
            <!--android:layout_width="34dp"-->
            <!--android:layout_height="34dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:src="@drawable/text_face"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:visibility="gone"/>-->

        <Button
            android:id="@+id/imageButtonSaveImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="@drawable/sharebutton"
            android:text="Share to"/>

        <com.droidninja.imageeditengine.brush.ColorPicker
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:id="@+id/color_picker"
            android:visibility="gone">
        </com.droidninja.imageeditengine.brush.ColorPicker>

        <TextView
            android:id="@+id/add_text_done_tv"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border_text_view"
            android:text="Done"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="40dp"
            android:visibility="gone"
            android:background="#A6FFFFFF"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="40dp"
    android:layout_height="40dp">


   <RelativeLayout
       android:layout_width="match_parent"
       android:id="@+id/rl_social"
       android:layout_margin="8dp"
       android:layout_height="match_parent">
       <ImageView
           android:id="@+id/social_fb"
           android:layout_width="40dp"
           android:adjustViewBounds="true"
           android:visibility="gone"
           android:src="@drawable/facebook"
           android:layout_height="40dp"


           />
       <ImageView
           android:id="@+id/social_linkedin"
           android:layout_width="40dp"
           android:visibility="gone"
           android:layout_marginLeft="3dp"
           android:layout_toRightOf="@+id/social_fb"
           android:adjustViewBounds="true"
           android:src="@drawable/linkedin"
           android:layout_height="40dp"


           />
       <ImageView
           android:id="@+id/social_twitter"
           android:layout_width="40dp"
           android:visibility="gone"
           android:layout_toRightOf="@+id/social_linkedin"
           android:adjustViewBounds="true"
           android:src="@drawable/twitter"
           android:layout_marginLeft="3dp"
           android:layout_marginRight="5dp"
           android:layout_height="40dp"


           />
   </RelativeLayout>

    <ImageView
        android:id="@+id/imgPhotoEditorClose"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="top|start"
        android:elevation="1dp"
        android:visibility="gone"
        android:src="@drawable/ic_remove" />

</FrameLayout>

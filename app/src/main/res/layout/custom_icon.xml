<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/custom_icon">

        <HorizontalScrollView
            android:id="@+id/horizontal_scr"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/loveu_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/loveu"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center"/>
                
                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/anniversary_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/anniversary"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/birthday_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/birthday"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/gm_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/gm"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/gn_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/gn"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/congratulation_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/congratulation"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>

</LinearLayout>
    

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.Profile">

        <RelativeLayout
            android:id="@+id/Re_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/my_profile">

            <ImageView
                android:id="@+id/account_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:padding="3dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Account Detail"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_logo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:padding="10dp"
            android:src="@drawable/logo_cicle" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/round_outline"
            android:layout_marginLeft="-43dip"
            android:layout_toRightOf="@+id/my_logo"
            android:layout_marginTop="157dp"
            android:src="@drawable/edit" />


        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:background="@drawable/border_edit"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:layout_below="@id/my_logo"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_mobno"
            android:layout_width="match_parent"
            android:background="@drawable/border_edit"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_email"
            android:layout_marginTop="12dp"
            android:hint="Mob no"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:background="@drawable/border_edit"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_mobno"
            android:layout_marginTop="12dp"
            android:hint="Address"
           />

        <EditText
            android:id="@+id/et_website_url"
            android:layout_width="match_parent"
            android:background="@drawable/border_edit"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_address"
            android:layout_marginTop="12dp"
            android:hint="Websire Url"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_fb_url"
            android:layout_width="match_parent"
            android:background="@drawable/border_edit"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_website_url"
            android:layout_marginTop="12dp"
            android:hint="Facebook link" />

        <EditText
            android:id="@+id/et_insta_link"
            android:layout_width="match_parent"
            android:background="@drawable/border_edit"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_fb_url"
            android:layout_marginTop="12dp"
            android:hint="Instagram link" />

        <EditText
            android:id="@+id/et_linkdin_link"
            android:layout_width="match_parent"
            android:background="@drawable/border_edit"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_insta_link"
            android:layout_marginTop="12dp"
            android:hint="Linkedin link" />



        <Button
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_linkdin_link"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </RelativeLayout>
</ScrollView>